<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="colorPrimaryDark">@color/myPrimaryDarkColor</item>
        <item name="colorAccent">@color/myAccentColor</item>
        <item name="android:colorButtonNormal">@color/myAccentColor</item>
        <item name="android:windowBackground">@color/myWindowBackground</item>
        <item name="android:textColorPrimary">@color/myTextPrimaryColor</item>
        <item name="android:textColorLink">@color/myTextPrimaryColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/myNavigationColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/myWindowBackground</item>
        <item name="android:colorButtonNormal">@color/myPrimaryColor</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>
</resources>
