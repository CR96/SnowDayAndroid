<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="colorPrimaryDark">@color/myPrimaryDarkColor</item>
        <item name="colorAccent">@color/myAccentColor</item>
        <item name="colorButtonNormal">@color/myAccentColor</item>
        <item name="android:windowBackground">@color/myWindowBackground</item>
        <item name="android:textColorPrimary">@color/myTextPrimaryColor</item>
        <item name="android:textColorLink">@color/myTextPrimaryColor</item>

        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="android:windowBackground">@color/myWindowBackground</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="elevation">@dimen/toolbar_elevation</item>
    </style>
</resources>
